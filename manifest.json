{
  "manifest_version": 3,
  "name": "Parcoursup Saver",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://dossier.parcoursup.fr/*",
    "https://api.parse.bot/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://dossier.parcoursup.fr/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}